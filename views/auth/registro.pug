extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my.font-extrabold.text-center Bienes
            span.font-normal Catises 
        h2.text-center.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-5.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow 
                form.space-y-5(method="POST" action="/auth/registro" novalidate)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Tu nombre 
                        input#nombre.w-full.px-3.py-2.border-gray-300.ronded-md.placeholder-gray-400(placeholder="Tu nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Tu email 
                        input#email.w-full.px-3.py-2.border-gray-300.ronded-md.placeholder-gray-400(placeholder="Tu email" type="email" name="email" value= usuario ? usuario.email : '') 
                                                                                                                                                    //-el usuario value es la continuacion de lo de usuario controller para mantener los campos correctos despues de que algun otro campo marque error
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="contrasena") Tu contraseña 
                        input#contrasena.w-full.px-3.py-2.border-gray-300.ronded-md.placeholder-gray-400(placeholder="Tu contraseña" type="password" name="contrasena")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repetir_contrasena") Repetir contraseña 
                        input#repetir_contrasena.w-full.px-3.py-2.border-gray-300.ronded-md.placeholder-gray-400(placeholder="Repite tu contraseña" type="password" name="repetir_contrasena")
                    
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login")  ¿Ya tienes cuenta? Inicia sesion 
                        a.text-gray-500.text-xs(href="/auth/recuperar-contrasena")  Olvide mi contraseña

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear cuenta")
        